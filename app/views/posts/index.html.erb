<div class="">
  <br>
</div>

<div class="card container padding">
<center>
  <h1 class=" card-header ">¡Encuentra a personas!</h1>
  <br>

  <table class="table table-hover">
    <tr>
      <th>Usuario</th>
      <th>Título</th>
      <th>Contenido</th>
    </tr>

    <% @posts.each do |post| %>
    <tr>
      <td><%= post.user[:username] %></td>
      <td><%= post.tittle %></td>
      <td><%= post.body %></td>
      <td>  <%= link_to "Ver post", post %> </td>
      <td>  <%= link_to "Editar post", edit_post_path(post) %> </td>
      <td>  <%= link_to "Eliminar post", post, method: :delete, data: { confirm: '¿Estás seguro?' } %> </td>
    </tr>
    <% end %>
  </table>
</center>
</div>

