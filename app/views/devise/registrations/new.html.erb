    <div class="container-fluid">
      <section class="row">
        <div class=" col-xs-12 col-sm-6 col-md-6">
          <center class="tittle">
            <img class="icon" src="<%= asset_path 'Clif.png' %>">
            <br><br>
              <h1 class="display-6 text-black">Bienvenido a clif</h1>
          </center>
        </div>
        <div class="bnvPanel rgtPanel col-xs-12 col-sm-6 col-md-6">
          <div class="text-white"><h3>¡REGÍSTRATE!</h3> </div>
          <br>
          <div class="row">


              <div class="text-white col-xs-12 col-sm-6 col-md-6 " style="max-width: 20rem;">

                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= devise_error_messages! %>
                <div class="field">
                  <%= f.label :"Ingresa el correo electronico: " %><br />
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "Ejemplo@hotmail.com" %>
                </div>
                <div class="field">
                  <%= f.label :"Ingresa el Curp: " %><br />
                  <%= f.text_field :username, autofocus: true, :placeholder => "Alias"%>
                </div>
                <div class="field">
                  <%= f.label :"Ingresa el nombre:" %><br />
                  <%= f.text_field :name, autofocus: true, :placeholder => "Nombre"%>
                </div>
                <div class="field">
                  <%= f.label :"Ingresa el apellido: " %><br />
                  <%= f.text_field :last_name, autofocus: true, :placeholder => "Apellido"%>
                </div>
                <div class="field">
                  <%= f.label :"Ingresa la edad: " %><br />
                    <%= f.text_field :age, autofocus: true, :placeholder => "18+"%>
                </div>

              </div>

              <div class="2doPan text-white col-xs-12 col-sm-6 col-md-6 mb-3" style="max-width: 20rem;">

                    <div class="field">
                      <%= f.label :"Agrega el estado: " %><br />
                        <%= f.text_field :state, autofocus: true, :placeholder => "Aquí el estado"%>
                    </div>
                    <div class="field">
                      <%= f.label :"Agrega el pais: " %><br />
                        <%= f.text_field :country, autofocus: true , :placeholder => "Aquí el país"%>
                    </div>
                    <div class="field">
                      <%= f.label :"Escoge el tipo de sangre: " %><br />
                        <%= f.text_field :blood_type, autofocus: true , :placeholder => "(Letra +/-) A+"%>
                    </div>
                    <div class="field">
                      <%= f.label :"Ingresa una contraseña: "%>

                            <%= f.password_field :password, autocomplete: "off" , :placeholder => "6 Carácteres mínimos" %>
                    </div>
                    <div class="field">
                      <%= f.label :"Reescribre la contraseña: " %><br />
                        <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => "Asegúrate de escribirla bien" %>
                        <div class="actions">
                          <%= f.submit %>
                        </div>
                        <% end %>
                    </div>

                </div>
              </div>
          </div>
      </div>
